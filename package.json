{
  "name": "credence",
  "version": "1.0.0",
  "description": "credence - A fast, seamless and minimalist framework for Node, Deno and Bun.js. Embrace the speed and elegance of the next-gen server-side experience.",
  "main": "dist/index.js",
  "type": "module",
  "files": [
    "dist/index.d.ts",
    "dist/index.js"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fridaycandour/credence.git"
  },
  "keywords": [
    "ssg",
    "documentation",
    "web",
    "framework",
    "fast",
    "simple",
    "bunjs",
    "nodejs",
    "denojs",
    "expressive"
  ],
  "author": "fridaycandour fridaycandours@gmail.com",
  "license": "Apache",
  "bugs": {
    "url": "https://github.com/fridaycandour/credence/issues"
  },
  "homepage": "https://github.com/fridaycandour/credence#readme",
  "scripts": {
    "compile": "bun bundle.ts",
    "bun": "bun --watch tests/app.ts",
    "dev": "node --watch --experimental-strip-types tests/app.ts",
    "watch": "tsc tests/*.ts --target esnext --watch",
    "build": "bun bundle.ts"
  },
  "engines": {
    "node": ">=14.0.0",
    "bun": ">=0.1.0"
  },
  "private": false,
  "devDependencies": {
    "@types/bun": "^1.1.8",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^20.11.16"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.0.8",
    "chokidar": "^4.0.3",
    "highlight.js": "^11.11.1",
    "isbinaryfile": "^5.0.4",
    "markdown-it": "^14.1.0",
    "mime": "^4.0.6",
    "ws": "^8.18.1"
  },
  "credence": {
    "input_directory": ".",
    "output_directory": "docs",
    "base_html_file": "local/doc.html",
    "assets_to_copy": "./local"
  }
}